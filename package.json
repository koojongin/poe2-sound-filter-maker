{
  "name": "poe2-sound-filter-maker",
  "version": "1.0",
  "scripts": {
    "main": "./dist/main.js",
    "-build": "tsc && cp index.html dist/index.html",
    "build": "webpack --mode production --config webpack.render.config.js",
    "watch": "tsc --watch",
    "start:electron": "concurrently \"tsc --watch\" \"electron ./dist/main.js\"",
    "start:react": "webpack serve --config webpack.render.config.js",
    "dev": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "pack": "electron-builder"
  },
  "build": {
    "appId": "com.poe2.soundfiltermaker",
    "productName": "Poe2SoundFilterMaker",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "directories": {
      "output": "bundle"
    }
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "browserify-fs": "^1.0.0",
    "concurrently": "^9.1.0",
    "css-loader": "^7.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-webpack": "^2.8.2",
    "fs-extra": "^11.2.0",
    "html-webpack-plugin": "^5.6.3",
    "path-browserify": "^1.0.1",
    "postcss": "^8.4.49",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
